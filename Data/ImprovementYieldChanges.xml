<GameInfo>
	
	<!-- 
		Mines provide 3 hammers
		Farms provide 3 food
		pastures provide 2 food and 1 hammer
		Irrigation improvements provide 1 food and 3 gold.
	-->
	<Improvement_YieldChanges>
		<Update>
			<Set YieldChange="3" />
			<Where ImprovementType="IMPROVEMENT_FARM" YieldType="YIELD_FOOD" />
		</Update>
		<Update>
			<Set YieldChange="3" />
			<Where ImprovementType="IMPROVEMENT_MINE" YieldType="YIELD_PRODUCTION" />
		</Update>
		<Update>
			<Set YieldChange="2" />
			<Where ImprovementType="IMPROVEMENT_PASTURE" YieldType="YIELD_FOOD" />
		</Update>
		<Update>
			<Set YieldChange="1" />
			<Where ImprovementType="IMPROVEMENT_PASTURE" YieldType="YIELD_PRODUCTION" />
		</Update>
		<Update>
			<Set YieldChange="1" />
			<Where ImprovementType="IMPROVEMENT_PLANTATION" YieldType="YIELD_FOOD" />
		</Update>
		<Update>
			<Set YieldChange="3" />
			<Where ImprovementType="IMPROVEMENT_PLANTATION" YieldType="YIELD_GOLD" />
		</Update>
	</Feature_Removes>
	
</GameInfo>
