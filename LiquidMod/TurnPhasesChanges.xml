<GameInfo>

	<!-- Simultaneous turn with dynamic timer is now 30 sec base + 6 sec per city + 1 sec per unit -->
	<TurnSegments>
		<Update>
			<Set TimeLimit_Base ="30"  TimeLimit_PerCity="6"  TimeLimit_PerUnit="1" />
			<Where TurnSegmentType="TURNSEG_SINGLEPHASE" />
		</Update>
	</TurnSegments>
	
</GameInfo>